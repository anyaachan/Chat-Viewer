<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="BOTTOM_CENTER" prefHeight="419.0" prefWidth="389.0" spacing="10.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chatviewer.ChatViewerController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
   <children>
      <ListView fx:id="messageListView" prefHeight="377.0" prefWidth="369.0" style="-fx-background-color: #F5F5F5; -fx-background-radius: 20;" VBox.vgrow="ALWAYS" />
      <Button fx:id="openButton" mnemonicParsing="false" onAction="#openMsgFile" prefHeight="60.0" prefWidth="117.0" style="-fx-background-radius: 20;" text="Open File" textAlignment="CENTER">
         <font>
            <Font size="16.0" />
         </font></Button>
      <Label fx:id="infoLabel" prefHeight="17.0" prefWidth="430.0" text="No File Opened" />
   </children>
</VBox>
